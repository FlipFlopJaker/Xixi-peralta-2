client.on('ready', async (message) => {
 try {
  await message.client.channels 
      message.fetch('1006529622533472286')
          .then((fullMessage) => {
              fullMessage.mesages
              .fetch({limit: 1 })
              .then((data) =>
              console.log(data.first().embeds[0].title));
          });
} catch (error){
console.error(error);
}});



client.active = false;
client.on("messageCreate", (bot) => {
  if (
    bot.channelId == "1004687240787660911" &&
    bot.author.id == "993185256150671531"
  ) {
    if (
      bot.embeds[0].data.title == "El server se ha iniciado, panda de wannabes"
    ) {
      client.active = true;
    } else {
      client.active = false;
    }
  }
  console.log(client.active);
  console.log(bot.embeds);
});

client.login(token);
